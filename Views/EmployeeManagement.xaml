<UserControl x:Class="TheScheduler.Views.EmployeeManagement"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:TheScheduler.ViewModels"
             xmlns:local="clr-namespace:TheScheduler.Models"
             xmlns:Components="clr-namespace:TheScheduler.Components"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             KeyDown="UserControl_KeyDown"
             mc:Ignorable="d">

    <UserControl.Resources>
        <ResourceDictionary>
            <vm:EmployeeViewModel x:Key="vm"/>
        </ResourceDictionary>
    </UserControl.Resources>

    <UserControl.DataContext>
        <StaticResource ResourceKey="vm"/>
    </UserControl.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="1.3*"/>
            <ColumnDefinition Width="10*"/>
        </Grid.ColumnDefinitions>

        <!-- 멤버 리스트 -->
        <Grid  Grid.Row="0" Grid.Column="0"
                Margin="20,10,10,0">
            <DataGrid Grid.Column="0" 
                      ItemsSource="{Binding Employees}" 
                      SelectedItem="{Binding SelectedEmployee}" 
                      AutoGenerateColumns="False"
                      CanUserDeleteRows="False"
                      CanUserReorderColumns="False"
                      CanUserResizeRows="False"
                      CanUserAddRows="False"
                      IsReadOnly="True"
                      FontSize="15">
                <DataGrid.ColumnHeaderStyle>
                    <Style TargetType="DataGridColumnHeader" BasedOn="{StaticResource DataGridColumnHeaderStyle}">
                        <Setter Property="Background" Value="#538D18"/>
                    </Style>
                </DataGrid.ColumnHeaderStyle>
                <DataGrid.CellStyle>
                    <Style TargetType="DataGridCell" BasedOn="{StaticResource AppDataGridCellStyle}">
                        <Setter Property="MinHeight" Value="30"/>
                    </Style>
                </DataGrid.CellStyle>
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                    <DataGridTextColumn Header="名前" Binding="{Binding Name}" Width="150" CellStyle="{StaticResource AppDataGridCellStyle_Left}"/>
                    <DataGridTextColumn Header="性別" Binding="{Binding Sex}" Width="50"/>
                    <DataGridTextColumn Header="職種" Binding="{Binding Position}" Width="100"/>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>

            <!-- 멤버 리스트 조작 버튼 -->

        <Border Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Button Grid.Row="0" Content="登録" FontSize="30" Command="{Binding Open_AddEmployeeCommand}" Padding="10" Margin="0,0,0,5"/>
                <Button Grid.Row="1" Content="編集" FontSize="30" Command="{Binding Open_EditEmployeeCommand}" CommandParameter="{Binding SelectedEmployee.Id}" Padding="10" Margin="0,0,0,5"/>
                <Button Grid.Row="2" Content="削除" FontSize="30" Command="{Binding DeleteEmployeeCommand}" CommandParameter="{Binding SelectedEmployee}" Padding="10" Margin="0,0,0,5"/>
            </Grid>
        </Border>

            <!-- 멤버 정보 조회 -->
        <Border Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Margin="20" BorderThickness="2" BorderBrush="#333"
                CornerRadius="15" Padding="10" Background="#272727"
                Visibility="{Binding SelectedEmployee.Id, Converter={StaticResource UniversalConverter}}">
            <Components:EmployeeInfo DataContext="{Binding SelectedEmployee, Mode=OneWay}"/>
        </Border>

             <!-- 멤버 개인 캘린더 -->
        <Viewbox Grid.Row="0" Grid.Column="2"
                 Margin="10">
        </Viewbox>
        <Grid Margin="20" Grid.Row="0" Grid.RowSpan="2" Grid.Column="2">
            <DataGrid x:Name="Employees"
      Margin="10"
      ColumnHeaderHeight="80"
      AutoGenerateColumns="True"
      Background="Transparent"
      Foreground="White"
      BorderThickness="0"
      GridLinesVisibility="Horizontal"
      HorizontalGridLinesBrush="#333"
      CanUserAddRows="False"
      CanUserResizeColumns="False"
      CanUserResizeRows="False"
      CanUserSortColumns="False"
      CanUserReorderColumns="False"
      RowBackground="Transparent">
                <DataGrid.ColumnHeaderStyle>
                    <Style TargetType="DataGridColumnHeader" BasedOn="{StaticResource DataGridColumnHeaderStyle}"/>
                </DataGrid.ColumnHeaderStyle>
            </DataGrid>
            <Border 
            CornerRadius="20"
            BorderThickness="10"
            BorderBrush="#333"
            Background="Transparent"
            Margin="2">
            </Border>
        </Grid>

        <!-- 다이얼로그 -->
        <Border Visibility="{Binding IsDialogOpen, Converter={StaticResource UniversalConverter}}"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                Background="#BA232323"
                Grid.Row="0"
                Grid.RowSpan="2"
                Grid.ColumnSpan="3">
            <Components:EmployeeDialog x:Name="EmployeeDialog"/>
        </Border>


    </Grid>
</UserControl>
