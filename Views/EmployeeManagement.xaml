<UserControl x:Class="TheScheduler.Views.EmployeeManagement"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:TheScheduler.ViewModels"
             xmlns:local="clr-namespace:TheScheduler.Models"
             xmlns:Components="clr-namespace:TheScheduler.Components"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             KeyDown="UserControl_KeyDown"
             mc:Ignorable="d">

    <UserControl.Resources>
        <vm:EmployeeViewModel x:Key="VM"/>
    </UserControl.Resources>

    <UserControl.DataContext>
        <StaticResource ResourceKey="VM"/>
    </UserControl.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="7*"/>
            <ColumnDefinition Width="1.3*"/>
            <ColumnDefinition Width="10*"/>
        </Grid.ColumnDefinitions>

        <!-- 멤버 리스트 -->
        <Grid  Grid.Row="0" Grid.Column="0"
                Margin="10">
            <DataGrid Grid.Column="0" 
                      ItemsSource="{Binding Employees}" 
                      SelectedItem="{Binding SelectedEmployee}" 
                      AutoGenerateColumns="False"
                      CanUserDeleteRows="False"
                      CanUserReorderColumns="False"
                      CanUserResizeRows="False"
                      CanUserAddRows="False"
                      IsReadOnly="True"
                      FontSize="15">
                <DataGrid.ColumnHeaderStyle>
                    <Style TargetType="DataGridColumnHeader" 
           BasedOn="{StaticResource MahApps.Styles.DataGridColumnHeader}">
                        <Setter Property="FontSize" Value="17"/>
                    </Style>
                </DataGrid.ColumnHeaderStyle>

                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                    <DataGridTextColumn Header="名前" Binding="{Binding Name}" Width="*"/>
                    <DataGridTextColumn Header="性別" Binding="{Binding Sex}" Width="50"/>
                    <DataGridTextColumn Header="職種" Binding="{Binding Position}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>

        <!-- 멤버 리스트 조작 버튼 -->
        <Viewbox Grid.Row="0" Grid.Column="1"
                 Margin="10">
            <Border>
                <StackPanel Grid.Column="1" Orientation="Vertical" VerticalAlignment="Top"  >
                    <Button Content="登録" Command="{Binding Open_AddEmployeeCommand}" Margin="0,0,0,5"/>
                    <Button Content="削除" Command="{Binding DeleteEmployeeCommand}" CommandParameter="{Binding SelectedEmployee}" Margin="0,0,0,5"/>
                </StackPanel>
            </Border>
        </Viewbox>

        <!-- 멤버 정보 조회 -->
        <Border Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Margin="20" BorderThickness="2" BorderBrush="#333"
                CornerRadius="15" Padding="10" Background="#272727"
                Visibility="{Binding SelectedEmployee, Converter={StaticResource UniversalConverter}}">
            <Components:EmployeeInfo DataContext="{Binding SelectedEmployee, Mode=OneWay}"/>
        </Border>

        <!-- 멤버 개인 캘린더 -->
        <Viewbox Grid.Row="0" Grid.Column="2"
                 Margin="10">
        </Viewbox>
        <Grid Margin="20" Grid.Row="0" Grid.RowSpan="2" Grid.Column="2">
            <DataGrid x:Name="Employees"
      Margin="10"
      ColumnHeaderHeight="80"
      AutoGenerateColumns="True"
      Background="Transparent"
      Foreground="White"
      BorderThickness="0"
      GridLinesVisibility="Horizontal"
      HorizontalGridLinesBrush="#333"
      CanUserAddRows="False"
      CanUserResizeColumns="False"
      CanUserResizeRows="False"
      CanUserSortColumns="False"
      CanUserReorderColumns="False"
      RowBackground="Transparent"
      ColumnHeaderStyle="{DynamicResource DataGridColumnHeaderStyle}">
            </DataGrid>
            <Border 
            CornerRadius="20"
            BorderThickness="10"
            BorderBrush="#333"
            Background="Transparent"
            Margin="2">
            </Border>
        </Grid>

        <Grid Background="#80000000"
                Visibility="{Binding IsDialogOpen, Converter={StaticResource UniversalConverter}}"
                HorizontalAlignment="Stretch"
                Grid.Row="0"
                Grid.RowSpan="2"
                Grid.Column="0"
                Grid.ColumnSpan="3"
                VerticalAlignment="Stretch">
            <Border Background="#2F2F2F"
                    CornerRadius="15"
                    BorderThickness="2"
                    BorderBrush="#7B7B7B"
                    Width="450"
                    Height="620">
                <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="10*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>

                    <!-- 텍스트를 다이얼로그 위에 배치 -->
                    <TextBlock Text="メンバー登録"
                           Grid.Row="0"
                           Foreground="White"
                           FontSize="24"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Top"/>

                    <!-- 다이얼로그 -->
                    <Components:AddEmployeeDialog x:Name="AddEmployeeDialog"
                                              Grid.Row="1"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center">
                    </Components:AddEmployeeDialog>

                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>
