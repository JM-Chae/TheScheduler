<UserControl x:Class="TheScheduler.Views.Home"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:vm="clr-namespace:TheScheduler.ViewModels"
             xmlns:Components="clr-namespace:TheScheduler.Components"
             xmlns:local="clr-namespace:TheScheduler.Views"
             xmlns:utils="clr-namespace:TheScheduler.Utils"
             xmlns:sys="clr-namespace:System;assembly=mscorlib">

    <UserControl.Resources>
        <ResourceDictionary>
            <vm:HomeViewModel x:Key="vm"/>

            <!-- Header DataTemplates -->
            <DataTemplate x:Key="DateHeaderTemplate" DataType="{x:Type utils:DateHeader}">
                <Grid Background="Transparent">
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock Text="{Binding DayOfWeekKorean}" FontWeight="Normal" HorizontalAlignment="Center" FontSize="11" Foreground="White"/>
                        <TextBlock Text="{Binding Day}" FontWeight="Bold" FontSize="14" Margin="0,2,0,0" Foreground="White"/>
                    </StackPanel>
                </Grid>
            </DataTemplate>

            <DataTemplate x:Key="StringHeaderTemplate" DataType="{x:Type sys:String}">
                    <TextBlock Text="{Binding}" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold" FontSize="14" Foreground="White"/>
            </DataTemplate>

            <!-- Header Styles -->
            <Style x:Key="WeekdayHeaderStyle" TargetType="DataGridColumnHeader" BasedOn="{StaticResource DataGridColumnHeaderStyle}">
                <Setter Property="Background" Value="#538D18"/>
                <Setter Property="Height" Value="55"/>
            </Style>
            <Style x:Key="SaturdayHeaderStyle" TargetType="DataGridColumnHeader" BasedOn="{StaticResource DataGridColumnHeaderStyle}">
                <Setter Property="Background" Value="#3A4182FF"/>
                <Setter Property="Height" Value="55"/>
            </Style>
            <Style x:Key="SundayHeaderStyle" TargetType="DataGridColumnHeader" BasedOn="{StaticResource DataGridColumnHeaderStyle}">
                <Setter Property="Background" Value="#2FFF7272"/>
                <Setter Property="Height" Value="55"/>
            </Style>

        </ResourceDictionary>
    </UserControl.Resources>

    <UserControl.DataContext>
        <StaticResource ResourceKey="vm"/>
    </UserControl.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1.2*"/>
            <RowDefinition Height="1"/> <!-- Horizontal line -->
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="0.4*"/>
        </Grid.ColumnDefinitions>

        <!-- Separator Lines -->
        <Border Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="5" Background="#555" />

        <!-- Original Content (Repositioned) -->
        <Viewbox Grid.Row="0" Grid.Column="0" >
            <Grid Margin="10">
                <Border CornerRadius="5" Width="Auto" Height="30" Margin="-5, 5" Background="#538d18" IsHitTestVisible="False" VerticalAlignment="Top"/>
                <Calendar x:Name="MyCalendar"
                        Foreground="White"
                        Background="Transparent"
                        BorderThickness="0" 
                        CalendarButtonStyle="{StaticResource MyCalendarButtonStyle}"
                        CalendarDayButtonStyle="{StaticResource MyCalendarDayButtonStyle}"
                        DisplayDateChanged="MyCalendar_DisplayDateChanged">
                </Calendar>
            </Grid>
        </Viewbox>
        
        <Viewbox Grid.Row="0" Grid.Column="1">
            <Border

            CornerRadius="15"
            BorderThickness="2"
            Background="#222"
            Margin="10">
                <TextBlock>集計空間</TextBlock>
            <!--    <DataGrid x:Name="MyDataGrid"
                  AutoGenerateColumns="False"
                  Background="Transparent"
                  Foreground="White"
                  BorderThickness="0"
                  GridLinesVisibility="Horizontal"
                  HorizontalGridLinesBrush="#333"
                  CanUserAddRows="False">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="Auto"/>
                    </DataGrid.Columns>
                </DataGrid>                          -->
            </Border>
        </Viewbox>

    
        <Grid Grid.Row="2" Grid.Column="1" Margin="10,0,10,10">
            <DataGrid x:Name="MyDataGrid"
                      BorderThickness="1"
                      Style="{StaticResource AppDataGridStyle}"
                      AutoGenerateColumns="True"
                      IsReadOnly="True"
                      HeadersVisibility="Column"         
                      HorizontalAlignment="Center"
                      MouseDoubleClick="MyDataGrid_MouseDoubleClick"
                      AutoGeneratingColumn="MyDataGrid_AutoGeneratingColumn">
                                <DataGrid.CellStyle>
                    <Style TargetType="DataGridCell" BasedOn="{StaticResource HomeDataGridCellStyle}">
                        <EventSetter Event="MouseEnter" Handler="DataGridCell_MouseEnter"/>
                        <EventSetter Event="MouseLeave" Handler="DataGridCell_MouseLeave"/>
                        <Setter Property="Background">
                            <Setter.Value>
                                <MultiBinding Converter="{StaticResource CellValueToBrushConverter}">
                                    <Binding Path="Content.Text" RelativeSource="{RelativeSource Self}"/>
                                    <Binding Path="Column.DisplayIndex" RelativeSource="{RelativeSource Self}"/>
                                </MultiBinding>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding Column.DisplayIndex, RelativeSource={RelativeSource Self}}" Value="0">
                                <Setter Property="Foreground" Value="White"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </DataGrid.CellStyle>
            </DataGrid>
        </Grid>

        <Border Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="0" Grid.RowSpan="3" Background="#32000000"
            Visibility="{Binding IsVisibleScheduleEditDitalog, Converter={StaticResource UniversalConverter}}">
            <Components:ScheduleEditSelector x:Name="ScheduleEditSelector" Margin="20, 20, 0, 0" VerticalAlignment="Top" HorizontalAlignment="Left"/>
        </Border>
    </Grid>
</UserControl>
