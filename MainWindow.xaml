<Window x:Class="TheScheduler.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TheScheduler"
        xmlns:shell="clr-namespace:System.Windows.Shell;assembly=PresentationFramework"
        mc:Ignorable="d"
        WindowStyle="None"
        ResizeMode="CanResize"
        Background="#FF1E1E1E"
        Title="TheScheduler"
        Height="720" Width="1280">
    <shell:WindowChrome.WindowChrome>
        <shell:WindowChrome
            ResizeBorderThickness="10"
            CaptionHeight="32"
            CornerRadius="0"
            GlassFrameThickness="0" />
    </shell:WindowChrome.WindowChrome>
   
    <DockPanel Background="Transparent">
        <!-- 상단 메뉴바 -->
        <Grid DockPanel.Dock="Top" >
            <DockPanel>                
                <Menu DockPanel.Dock="Left" shell:WindowChrome.IsHitTestVisibleInChrome="True" ItemContainerStyle="{StaticResource NoBorderMenuItemStyle}">
                    <MenuItem Header="メイン" Click="Home_Click" />
                    <MenuItem Header="メンバー" Click="Member_Click"/>
                </Menu>
                <StackPanel DockPanel.Dock="Right" Orientation="Horizontal" HorizontalAlignment="Right" shell:WindowChrome.IsHitTestVisibleInChrome="True">
                    <Button Content="―" Style="{StaticResource WindowControlButton}" Click="Minimize_Click"/>
                    <Button Content="□" Style="{StaticResource WindowControlButton}" Click="Maximize_Click"/>
                    <Button Content="X" Style="{StaticResource WindowControlButton}" Click="Close_Click"/>
                </StackPanel>
            </DockPanel>
        </Grid>


        <!-- 메인 콘텐츠 -->
        <ContentControl x:Name="MainContent"/>
    </DockPanel>
</Window>
