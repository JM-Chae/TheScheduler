<UserControl x:Class="TheScheduler.Components.CorrectionDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TheScheduler.Components"
             xmlns:models="clr-namespace:TheScheduler.Models"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
             mc:Ignorable="d">
    <UserControl.Resources>
        <ObjectDataProvider
        x:Key="CorrectionTypeValuesProvider"
        MethodName="GetValues"
        ObjectType="{x:Type sys:Enum}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="models:CorrectionType" />
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
    </UserControl.Resources>
    <Grid Margin="10,0,0,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100" />
            <ColumnDefinition Width="140" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <TextBlock VerticalAlignment="Center" Grid.Row="0" Text="事由" FontSize="17" FontWeight="Bold"/>
        <ComboBox VerticalAlignment="Center" Grid.Row="0" Grid.Column="1" ItemsSource="{Binding Source={StaticResource CorrectionTypeValuesProvider}}"
          
                  SelectedValue="{Binding Correction.Type, Mode=TwoWay}">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Grid.Column="2" Text="{Binding}"/>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>
        <TextBlock VerticalAlignment="Center" Grid.Row="2" Text="訂正時間" FontSize="17" FontWeight="Bold"/>
        <syncfusion:SfTimePicker VerticalAlignment="Center" Grid.Row="2" FontSize="15" Grid.Column="1" FormatString="HH:mm" Value="{Binding Correction.CorrectTime, Mode=TwoWay, Converter={StaticResource DateTimeConverter}}"/>
        <TextBlock VerticalAlignment="Center" Grid.Row="4" Text="加算" FontSize="17" FontWeight="Bold"/>
        <CheckBox VerticalAlignment="Center" Grid.Row="4"  Grid.Column="1" IsChecked="{Binding Correction.IsTimeIncreasing, Mode=TwoWay}"/>
        <TextBlock VerticalAlignment="Center" Grid.Row="6" Text="備考" FontSize="17" FontWeight="Bold"/>
        <Border Background="#292929" Height="60" CornerRadius="5" BorderThickness="1" BorderBrush="#444"  VerticalAlignment="Top" Grid.Row="6" Grid.Column="1">
            <TextBox AcceptsReturn="True" Padding="5" VerticalContentAlignment="Top" VerticalScrollBarVisibility="Auto" MinLines="3" FontSize="17" TextWrapping="Wrap" Text="{Binding Correction.Note}"/>
        </Border>
    </Grid>
</UserControl>
