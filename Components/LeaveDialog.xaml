<UserControl x:Class="TheScheduler.Components.LeaveDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TheScheduler.Components"
             xmlns:utils="clr-namespace:TheScheduler.Utils"
             mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100" />
            <ColumnDefinition Width="140" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="100"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <TextBlock VerticalAlignment="Center" Text="{utils:Loc LeaveDialog_PaidLeaveProcessing}" FontSize="17" FontWeight="Bold"/>
        <CheckBox VerticalAlignment="Center" Grid.Column="1" IsChecked="{Binding Leave.IsPaid, Mode=TwoWay}"/>
        <TextBlock Grid.Row="2" Text="{utils:Loc LeaveDialog_Remarks}" FontSize="17" FontWeight="Bold"/>
        <Border Background="#292929" Height="100" CornerRadius="5" BorderThickness="1" BorderBrush="#444"  VerticalAlignment="Top" Grid.Row="2" Grid.Column="1">
            <TextBox AcceptsReturn="True" Padding="5" VerticalContentAlignment="Top" VerticalScrollBarVisibility="Auto" MinLines="5" FontSize="17" TextWrapping="Wrap" Text="{Binding Leave.Why}"/>
        </Border>
    </Grid>
</UserControl>
