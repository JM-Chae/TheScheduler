<UserControl x:Class="TheScheduler.Components.ScheduleEditSelector"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TheScheduler.Components"
             xmlns:util="clr-namespace:TheScheduler.Utils"
             mc:Ignorable="d"
             MinWidth="400"
             MinHeight="800">

    <Border HorizontalAlignment="Center"
            VerticalAlignment="Center"
            CornerRadius="20"
            BorderThickness="3"
            BorderBrush="#7B7B7B"
            Background="#333">
        <Grid Margin="50">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="20"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="35"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0" HorizontalAlignment="Center">
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="1*"/>
                </Grid.RowDefinitions>
                <TextBlock HorizontalAlignment="Center" Grid.Row="0"  FontSize="20" FontWeight="Bold" Text="何を設定しますか？"/>
                <StackPanel Grid.Row="2" Orientation="Horizontal" >
                    <Button Content="シフト" FontSize="25"
                        Command="{Binding SwitchScheduleEditTypeCommand}" Width="120"
                        CommandParameter="Shift"/>
                    <Button Content="休暇" FontSize="25"
                        Command="{Binding SwitchScheduleEditTypeCommand}" Width="120" Margin="30, 0, 30, 0"
                        CommandParameter="Leave"/>
                    <Button Content="時間訂正" FontSize="25"
                        Command="{Binding SwitchScheduleEditTypeCommand}" Width="120"
                        CommandParameter="Correction"/>
                </StackPanel>
            </Grid>

            <Border CornerRadius="10" Background="#292929" HorizontalAlignment="Left" Grid.Row="2">
                <Grid Margin="10, 10, 10, 0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="10"/>
                        <RowDefinition Height="1*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="30"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock FontWeight="Bold" FontSize="16" Text="選択したメンバー"/>
                    <TextBlock Grid.Column="2" FontSize="16" Text="{Binding SelectedEmployee.Name}"/>
                    <TextBlock FontWeight="Bold" Grid.Row="2" FontSize="16" Text="選択した日付"/>
                    <Label Grid.Row="2" Grid.Column="2" Margin="-5, 0, 0, 0" FontSize="16" Content="{Binding CurrentDate}" ContentStringFormat="yyyy年 MM月 dd日"/>
                </Grid>
            </Border>

            <ContentControl Grid.Row="4" x:Name="DialogContent" Loaded="ScheduleEditSelector_Loaded"/>

            <Button Grid.Row="5" Command="{Binding ScheduleEditDialogCloseCommand}" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20" Width="120" Height="35" Content="閉じる"></Button>
            <Button Width="120" Height="35" FontSize="20" HorizontalAlignment="Right" VerticalAlignment="Top" Grid.Column="2" Grid.Row="4" Content="取り消す" Command="{Binding DeleteHandlerCommand}"/>
            <Button Grid.Row="5" FontSize="20" Width="120" Height="35" HorizontalAlignment="Right" VerticalAlignment="Center" Grid.Column="3" Command="{Binding ScheduleEditHandlerCommand}" Content="設定" />
        </Grid>
    </Border>
</UserControl>
