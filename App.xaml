<Application x:Class="TheScheduler.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:utils="clr-namespace:TheScheduler.Utils"
             StartupUri="MainWindow.xaml">

    <Application.Resources>
        <ResourceDictionary>
            <utils:UniversalConverter x:Key="UniversalConverter"/>
            <utils:DateTimeConverter x:Key="DateTimeConverter"/>
            <utils:EnumToBrushConverter x:Key="EnumToBrushConverter"/>
            <utils:CellValueToBrushConverter x:Key="CellValueToBrushConverter"/>


            <Style TargetType="Control">
                <Setter Property="FontFamily" Value="Meiryo"/>
            </Style>
            <Style TargetType="TextBlock">
                <Setter Property="FontFamily" Value="Meiryo"/>
            </Style>

            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles/Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
